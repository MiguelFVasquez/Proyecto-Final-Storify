<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="94.0" prefWidth="190.0" style="-fx-background-color: a3c0f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.estructuraDatos.proyecto.viewControllers.OptionsViewController">
   <children>
      <VBox alignment="CENTER" layoutY="4.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="86.0" prefWidth="190.0">
         <children>
            <Button fx:id="btnLike" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#addSongToLikedSongs" prefHeight="41.0" prefWidth="185.0" style="-fx-background-color: transparent;" text="Like">
               <font>
                  <Font name="Calibri" size="22.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="HEART" selectionStart="0" size="20" stroke="BLACK" />
               </graphic>
            </Button>
            <Button fx:id="btnAddQueue" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#addSongToQueue" prefHeight="41.0" prefWidth="185.0" style="-fx-background-color: transparent;" text="Add to queue">
               <font>
                  <Font name="Calibri" size="21.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="LIST" selectionStart="0" size="20" stroke="BLACK" strokeWidth="0.8" />
               </graphic>
            </Button>
         </children>
      </VBox>
   </children>
   <effect>
      <DropShadow />
   </effect>
</AnchorPane>
